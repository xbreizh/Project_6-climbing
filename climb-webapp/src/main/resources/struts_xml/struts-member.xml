<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>


    <package name="Member" extends="struts-default">


        <!-- CREATE-->
        <action name="member_new"
                class="org.example.demo.climb.webapp.action.GestionMemberAction"
                method="doCreate">
            <interceptor-ref name="store">
                <param name="operationMode">RETRIEVE</param>
            </interceptor-ref>
            <interceptor-ref name="defaultStack"/>
            <result name="input">/jsp/member/form/new.jsp</result>
            <result name="success" type="redirectAction">
                <param name="actionName">member_list</param>
            </result>
        </action>


        <!-- READ ALL -->
        <action name="member_list"
                class="org.example.demo.climb.webapp.action.GestionMemberAction"
                method="doList">
            <result>/jsp/member/list.jsp</result>

        </action>

        <!--READ ONE -->
        <action name="member_detail"
                class="org.example.demo.climb.webapp.action.GestionMemberAction"
                method="doDetail">
            <interceptor-ref name="store">
                <param name="operationMode">RETRIEVE</param>
            </interceptor-ref>
            <interceptor-ref name="defaultStack"/>

            <result name="success">jsp/member/detail.jsp</result>
        </action>


        <!-- UPDATE -->
        <action name="member_update"
                class="org.example.demo.climb.webapp.action.GestionMemberAction"
                method="doUpdate">
            <interceptor-ref name="store">
                <param name="operationMode">RETRIEVE</param>
            </interceptor-ref>
            <interceptor-ref name="defaultStack"/>
            <result name="input">/jsp/member/form/update.jsp</result>
            <result name="success" type="redirectAction">
                <param name="actionName">member_list</param>
            </result>
        </action>

        <!-- EDIT -->
        <action name="member_edit"
                class="org.example.demo.climb.webapp.action.GestionMemberAction"
                method="doEdit">
            <interceptor-ref name="store">
                <param name="operationMode">RETRIEVE</param>
            </interceptor-ref>
            <interceptor-ref name="defaultStack"/>
            <result name="success">/jsp/member/form/update.jsp</result>
        </action>


        <!-- DELETE -->
        <action name="member_delete"
                class="org.example.demo.climb.webapp.action.GestionMemberAction"
                method="doDelete">
            <interceptor-ref name="store">
                <param name="operationMode">RETRIEVE</param>
            </interceptor-ref>
            <interceptor-ref name="defaultStack"/>

            <result name="success" type="redirectAction">
                <param name="actionName">member_list</param>
            </result>
        </action>

    </package>
    <include file="struts_xml/struts-default2.xml"/>
</struts>