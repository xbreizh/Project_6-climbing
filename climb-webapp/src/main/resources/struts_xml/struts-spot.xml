<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>


    <package name="Spot" extends="struts-default">


        <!-- CREATE-->
        <action name="spot_new"
                class="org.example.demo.climb.webapp.action.GestionSpotAction"
                method="doCreate">
            <interceptor-ref name="store">
                <param name="operationMode">RETRIEVE</param>
            </interceptor-ref>
            <interceptor-ref name="defaultStack"/>
            <result name="input">/jsp/spot/form/new.jsp</result>
            <result name="success" type="redirectAction">
                <param name="actionName">spot_list</param>
            </result>
            <result name="error">/jsp/spot/form/new.jsp</result>
        </action>


        <!-- READ ALL -->
        <action name="spot_list"
                class="org.example.demo.climb.webapp.action.GestionSpotAction"
                method="doList">
            <result>/jsp/spot/list.jsp</result>

        </action>

        <!--READ ONE -->
        <action name="spot_detail"
                class="org.example.demo.climb.webapp.action.GestionSpotAction"
                method="doDetail">
            <interceptor-ref name="store">
                <param name="operationMode">RETRIEVE</param>
            </interceptor-ref>
            <interceptor-ref name="defaultStack"/>

            <result name="success">jsp/spot/detail.jsp</result>
        </action>


        <!-- UPDATE -->
        <action name="spot_update"
                class="org.example.demo.climb.webapp.action.GestionSpotAction"
                method="doUpdate">
            <interceptor-ref name="store">
                <param name="operationMode">RETRIEVE</param>
            </interceptor-ref>
            <interceptor-ref name="defaultStack"/>
            <result name="input">/jsp/spot/form/update.jsp</result>
            <result name="success" type="redirectAction">
                <param name="actionName">spot_list</param>
            </result>
        </action>

        <!-- EDIT -->
        <action name="spot_edit"
                class="org.example.demo.climb.webapp.action.GestionSpotAction"
                method="doEdit">
            <interceptor-ref name="store">
                <param name="operationMode">RETRIEVE</param>
            </interceptor-ref>
            <interceptor-ref name="defaultStack"/>
            <result name="success">/jsp/spot/form/update.jsp</result>
        </action>


        <!-- DELETE -->
        <action name="spot_delete"
                class="org.example.demo.climb.webapp.action.GestionSpotAction"
                method="doDelete">
            <interceptor-ref name="store">
                <param name="operationMode">RETRIEVE</param>
            </interceptor-ref>
            <interceptor-ref name="defaultStack"/>

            <result name="success" type="redirectAction">
                <param name="actionName">spot_list</param>
            </result>
        </action>


    </package>
    <include file="struts_xml/struts-default2.xml"/>
</struts>