<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

    <package name="Route" extends="struts-default">

        <!-- CREATE-->
        <action name="createRoute"
                class="org.example.demo.climb.webapp.action.CreationRouteAction"
                method="doCreateRoute">
          <!--  <interceptor-ref name="store">
                <param name="operationMode">STORE</param>
            </interceptor-ref>-->
            <interceptor-ref name="store">
                <param name="operationMode">RETRIEVE</param>
            </interceptor-ref>
            <interceptor-ref name="defaultStack"/>
           <!-- <result>/jsp/route/form/newRoute.jsp</result>-->
            <result name="input">/jsp/route/form/newRoute.jsp</result>

           <!-- <result name="success" >/jsp/route/success.jsp</result>-->
            <result name="success" type="redirectAction">
                <param name="actionName">spot_detail</param>
                <param name="id">${route.spot.id}</param>
            </result>

           <!-- <result name="error" type="redirect">
                <param name="location">/createRoute.action?id=${spot.id}</param>
            </result>-->
            <result name="error">/jsp/route/form/newRoute.jsp</result>
           <!-- <result name="error" >
                <param name="actionName">createRoute</param>
                <param name="id">${spot.id}</param>
            </result>-->
        </action>

        <!-- READ ALL -->
        <action name="route_list"
                class="org.example.demo.climb.webapp.action.CreationRouteAction"
                method="doList">
            <result>/jsp/route/list.jsp</result>
        </action>

        <!--READ ONE -->
        <action name="route_detail"
                class="org.example.demo.climb.webapp.action.CreationRouteAction"
                method="doDetail">
            <interceptor-ref name="store">
                <param name="operationMode">RETRIEVE</param>
            </interceptor-ref>
            <interceptor-ref name="defaultStack"/>

            <result name="success">jsp/spot/detail.jsp</result>
        </action>

        <action name="route_edit"
                class="org.example.demo.climb.webapp.action.CreationRouteAction"
                method="doEdit">
            <interceptor-ref name="store">
                <param name="operationMode">RETRIEVE</param>
            </interceptor-ref>
            <interceptor-ref name="defaultStack"/>
            <result name="success">/jsp/spot/form/update.jsp</result>
        </action>

        <!-- UPDATE -->
        <action name="route_update"
                class="org.example.demo.climb.webapp.action.CreationRouteAction"
                method="doUpdate">
            <interceptor-ref name="store">
                <param name="operationMode">RETRIEVE</param>
            </interceptor-ref>
            <interceptor-ref name="defaultStack"/>
            <result name="input">/jsp/spot/form/update.jsp</result>
            <result name="success" type="redirectAction">
                <param name="actionName">route_list</param>
            </result>
        </action>

        <!-- DELETE -->
        <action name="route_delete"
                class="org.example.demo.climb.webapp.action.CreationRouteAction"
                method="doDelete">
            <interceptor-ref name="store">
                <param name="operationMode">RETRIEVE</param>
            </interceptor-ref>
            <interceptor-ref name="defaultStack"/>
           <!-- <result name="input">/jsp/spot/form/update.jsp</result>-->
            <result name="success" type="redirectAction">
                <param name="actionName">spot_list</param>
            </result>
        </action>
    </package>
</struts>
