<struts>

    <package name="Zone" extends="struts-default">

        <!-- CREATE-->
        <action name="zone_new"
                class="org.example.demo.climb.webapp.action.GestionZoneAction"
                method="doCreate">
            <interceptor-ref name="store">
                <param name="operationMode">RETRIEVE</param>
            </interceptor-ref>
            <interceptor-ref name="defaultStack"/>
            <result name="input">/jsp/zone/form/new.jsp</result>
            <result name="success" type="redirectAction">
                <param name="actionName">zone_list</param>
            </result>
        </action>
        <!-- READ ALL -->
        <action name="zone_list"
                class="org.example.demo.climb.webapp.action.GestionZoneAction"
                method="doList">
            <result>/jsp/zone/list.jsp</result>

        </action>

        <!--READ ONE -->
        <action name="zone_detail"
                class="org.example.demo.climb.webapp.action.GestionZoneAction"
                method="doDetail">
            <interceptor-ref name="store">
                <param name="operationMode">RETRIEVE</param>
            </interceptor-ref>
            <interceptor-ref name="defaultStack"/>

            <result name="success">jsp/zone/detail.jsp</result>
        </action>


        <!-- UPDATE -->
        <action name="zone_update"
                class="org.example.demo.climb.webapp.action.GestionZoneAction"
                method="doUpdate">
            <interceptor-ref name="store">
                <param name="operationMode">RETRIEVE</param>
            </interceptor-ref>
            <interceptor-ref name="defaultStack"/>
            <result name="input">/jsp/zone/form/update.jsp</result>
            <result name="success" type="redirectAction">
                <param name="actionName">zone_list</param>
            </result>
        </action>

        <!-- EDIT -->
        <action name="zone_edit"
                class="org.example.demo.climb.webapp.action.GestionZoneAction"
                method="doEdit">
            <interceptor-ref name="store">
                <param name="operationMode">RETRIEVE</param>
            </interceptor-ref>
            <interceptor-ref name="defaultStack"/>
            <result name="success">/jsp/zone/form/update.jsp</result>
        </action>


        <!-- DELETE -->
        <action name="zone_delete"
                class="org.example.demo.climb.webapp.action.GestionZoneAction"
                method="doDelete">
            <interceptor-ref name="store">
                <param name="operationMode">RETRIEVE</param>
            </interceptor-ref>
            <interceptor-ref name="defaultStack"/>

            <result name="success" type="redirectAction">
                <param name="actionName">zone_list</param>
            </result>
        </action>
        <!-- Action de dÃ©monstration pour l'AJAX -->
        <action name="demo_ajax" class="org.example.demo.climb.webapp.action.DemoAjaxAction">
            <result name="success">/jsp/demo/ajax2.jsp</result>
        </action>

