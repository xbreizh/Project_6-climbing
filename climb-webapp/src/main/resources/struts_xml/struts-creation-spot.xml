        <!--READ ONE -->
        <action name="spot_detail"
                class="org.example.demo.climb.webapp.action.CreationSpotAction"
                method="doDetail">
            <interceptor-ref name="store">
                <param name="operationMode">RETRIEVE</param>
            </interceptor-ref>
            <interceptor-ref name="defaultStack"/>

            <result name="success">jsp/spot/detail.jsp</result>
        </action>

        <action name="spot_edit"
                class="org.example.demo.climb.webapp.action.CreationSpotAction"
                method="doEdit">
            <interceptor-ref name="store">
                <param name="operationMode">RETRIEVE</param>
            </interceptor-ref>
            <interceptor-ref name="defaultStack"/>
            <result name="success">/jsp/spot/form/update.jsp</result>
        </action>

        <!-- UPDATE -->
        <action name="spot_update"
                class="org.example.demo.climb.webapp.action.CreationSpotAction"
                method="doUpdate">
            <interceptor-ref name="store">
                <param name="operationMode">RETRIEVE</param>
            </interceptor-ref>
            <interceptor-ref name="defaultStack"/>
            <result name="input">/jsp/spot/form/update.jsp</result>
            <result name="success" type="redirectAction">
                <param name="actionName">spot_list</param>
            </result>
        </action>
    </package>
